{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css ",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss  -o ./app/styles/tailwind.css --watch",
    "postinstall": "remix setup node",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@portabletext/react": "^1.0.2",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@sanity/image-url": "^1.0.1",
    "@tailwindcss/forms": "^0.4.0",
    "dotenv": "^16.0.0",
    "flowbite": "^1.3.3",
    "hybrid-disk-cache": "^0.2.0",
    "picosanity": "^3.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "remix-image": "^0.2.0",
    "sharp": "^0.30.0",
    "tailwindcss-fluid-type": "^1.3.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "tailwindcss": "^3.0.18",
    "tailwindcss-fluid-spacing": "^0.4.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
